@section css{
    <link href="~/Content/App/index.css?UpDate=202002061553" rel="stylesheet" />
    <link href="~/Content/App/site.css?UpDate=202002071636" rel="stylesheet" />
}
<div class="home-content">
    <div class="app-list">
        @if (ViewData["Apps"] != null)
        {
            int i = 0;
            foreach (var app in ViewData["Apps"] as List<GripsStore.Models.App>)
            {

                if (i % 2 == 0)
                {
                    if (i > 0)
                    {
                        @Html.Raw("</div>");
                    }
                    @Html.Raw("<div class=\"row\">");
                }
                var iconPath = "/Files/" + app.appId + "/Icon/" + @app.icon;
                <div id="@app.appId" class="column app-item">
                    <img class="app-icon" src="@iconPath" />
                    <div class="label app-name">@app.name</div>
                    <div class="label app-description">@app.description</div>
                </div>
                i += 1;
            }
            if ((ViewData["Apps"] as List<GripsStore.Models.App>).Count % 2 == 0)
            {
                @Html.Raw("</div>");
                @Html.Raw("<div class=\"row\">");

            }
            <div class="add-item">
                <div id="div-btn">
                    <button id="btn-add-item" class="btn btn-success">アプリ新規作成</button>
                </div>
            </div>
            @Html.Raw("</div>");
        }
    </div>
</div>
@section scripts {
    <script src="../Scripts/App/index.js?UpDate=202002071713"></script>
    <script src="../Scripts/App/site.js?UpDate=202002071636"></script>
    <script src="../../Scripts/ttCookie_1.0.0.js"></script>
}