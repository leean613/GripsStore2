<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("css", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="" action="" style="margin:auto;height:40px;margin:5px;">
            <img id="home" src="../../Images/home.png"/>
            <input id="input-search" class="form-control" type="text" placeholder="検索.." />
            <button id="btn-search" class="btn btn-primary"><img src="../../Images/search_white.png" /></button>
            <button id="btn-login" class="btn btn-primary"><img id="user" /></button>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>